# Copy to .env and fill in values. Never commit .env.
# All configuration is via env; no hardcoded secrets or URLs in code.

# LLM (required for generation; optional for moderation fallback)
LLM_API_KEY=
MODEL=gpt-4o-mini

# Server
API_HOST=0.0.0.0
API_PORT=8000

# Environment (development | staging | production)
ENVIRONMENT=development
LOG_LEVEL=INFO

# Guardrails (Task-006): no hardcoded phrases; API + config only
GUARDRAILS_CONFIDENCE_THRESHOLD=0.7
GUARDRAILS_ESCALATE_ON_NO_ANSWER=true
# JSON array, e.g. [] or [{"when": "no_answer", "then": "escalate"}]
GUARDRAILS_ESCALATION_POLICY=[]
